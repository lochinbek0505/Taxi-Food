<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="8dp" android:bottomLeftRadius="8dp" />
            <solid android:color="#FAC1C1"/> <!-- Background when selected -->
            <stroke android:width="2dp" android:color="#F45A5A"/> <!-- Border when selected -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="8dp" android:bottomLeftRadius="8dp" />
            <solid android:color="#FFFFFF"/> <!-- Background when unselected -->
            <stroke android:width="2dp" android:color="@color/gray2"/> <!-- Border when unselected -->
        </shape>
    </item>
</selector>

